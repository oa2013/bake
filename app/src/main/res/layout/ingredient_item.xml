<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvIgredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/recipe_item_padding"
        android:layout_marginStart="@dimen/recipe_item_padding"
        android:layout_marginTop="@dimen/recipe_item_padding"
        android:text="@string/placeholder"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/ingredient_and_step_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIgredientQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/placeholder"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/ingredient_and_step_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIgredientName" />

    <TextView
        android:id="@+id/tvIgredientMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/placeholder"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/ingredient_and_step_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvIgredientQuantity"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75" />

</android.support.constraint.ConstraintLayout>